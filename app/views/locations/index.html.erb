<div class="container mt-5">
<h2>All Our Available destinations</h2>
<a class="btn btn-flat" href='/locations/new'>New Location</a>
<a class="btn btn-flat" href='/'>Home</a>

  <% @locations.each do |location| %>
  <div class="card-trip">
    <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/greece.jpg" />
    <div class="card-trip-infos">
      <div>
        <h2> <%= link_to location.name, location_path(location) %></h2>
        <p><%= location.city %></p>
        <p><%= location.country %></p>
        <p>Rooms: <%= location.number_of_rooms %></p>
      </div>
      <h2 class="card-trip-pricing">Price/ Night: <%= location.price_per_night %></h2>
      <img src="https://kitt.lewagon.com/placeholder/users/krokrob" class="card-trip-user avatar-bordered" />
    </div>
  </div>
  <% end %>
</div>
